@model IEnumerable<AsmStoreBook.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Title </th>
            <th> Price </th>
            <th>
                Quantity
            </th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Price)
                </td>
                <td>
                    <input asp-for="@item.Quantity" asp-route-Quantity="@item.Quantity" class="product-quantity" type="number">
                    <span asp-validation-for="@item.Quantity" class="text-danger"></span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                <a asp-action="AddToCart" asp-route-isbn="@item.Book.Isbn" value="Save">Confirm</a> |
            </td>
            </tr>
        }
        <p>@ViewBag.subPrice</p>
    </tbody>

</table>
<a asp-controller="Carts" asp-action="Checkout">Checkout</a>