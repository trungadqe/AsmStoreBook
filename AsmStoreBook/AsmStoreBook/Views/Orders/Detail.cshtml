@model IEnumerable<AsmStoreBook.Models.Order>

@{
    ViewData["Title"] = "Detail";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Books
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <ol>
                        @foreach (var detail in item.OrderDetails)
                        {
                            <li>
                                @detail.Book.Title
                            </li>
                        }
                    </ol>
                </td>
            </tr>
        }
    </tbody>
</table>

